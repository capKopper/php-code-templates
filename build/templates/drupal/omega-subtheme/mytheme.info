name = %%THEME_TITLE%%
description = %%THEME_DESCRIPTION%%
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

settings[capkopper_smtp][logo] = apple-touch-icon-precomposed.png
settings[capkopper_smtp][css] = css/%%MACHINE_NAME%%.swiftmailer.css

scripts[] = js/%%MACHINE_NAME%%.behaviors.js

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/%%MACHINE_NAME%%.normalize.css
stylesheets[all][] = css/%%MACHINE_NAME%%.hacks.css
stylesheets[all][] = css/%%MACHINE_NAME%%.styles.css
stylesheets[all][] = css/%%MACHINE_NAME%%.no-query.css
stylesheets[all][] = radix_layouts.css
stylesheets[all][] = flexslider_img.css
stylesheets[all][] = menu_minipanels.css

; ========================================
; Regions
; ========================================
regions[header] = Header
regions[highlighted] = Highlighted
regions[content] = Content
regions[footer] = Footer

; ========================================
; Breakpoints
; ========================================
breakpoints[tiny] = (max-width: 320px)
breakpoints[small] = (min-width: 320px) and (max-width: 479px)
breakpoints[narrow] = (min-width: 480px) and (max-width: 767px)
breakpoints[medium] = (min-width: 768px) and (max-width: 1215px)
breakpoints[wide] = (min-width: 1216px)

